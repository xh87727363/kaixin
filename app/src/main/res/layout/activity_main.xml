<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kaixin.com.qingdan.gui.Activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@id/viewPager_main"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>
    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff00ff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <CheckedTextView
                android:background="@drawable/selector_checkview_home"
                android:id="@id/CheckTextView_list_home"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <CheckedTextView
                android:id="@id/CheckTextView_list_categry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_checkview_qingdan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <CheckedTextView
                android:id="@id/CheckTextView_list_mine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_checkview_per"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
