<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/image_category_left1"
            android:background="#38604e"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@id/textview_category_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="fhshfkla"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/image_category_left1"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:padding="1dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/image_category_left1"
            android:layout_toRightOf="@+id/image_category_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home_card_img_heart_hl"/>
            <TextView
                android:id="@id/textview_category_like_count"
                android:layout_marginLeft="10dp"
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="30dp"
                android:src="@drawable/home_img_eye_nor"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@id/textview_category_look_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="30"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>