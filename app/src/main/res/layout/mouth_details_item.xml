<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="30dp"
        android:id="@id/image_mouth_pic"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/loading_placeholder"
        fresco:fadeDuration="1000"/>
    <TextView
        android:id="@id/textview_mouth_top"
        android:layout_toRightOf="@+id/image_mouth_pic"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text="hahahh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/textview_mouth_middle"
        android:layout_toRightOf="@+id/image_mouth_pic"
        android:layout_below="@+id/textview_mouth_top"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="enenenen"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:id="@id/ratingbar_mouth"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/image_mouth_pic"
        android:layout_below="@+id/textview_mouth_middle"
        android:layout_marginTop="20dp"
        style="@style/fiveStarRatingBar"
        android:layout_marginLeft="20dp"
        android:isIndicator="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/textview_mouth_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColor="#6b0f6c"
        android:background="@drawable/selector_text"
        android:layout_alignTop="@+id/textview_mouth_top"
        android:drawableLeft="@drawable/img_write_comment"
        android:text="点评"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@id/textview_mouth_bottuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fjdlskjf"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ratingbar_mouth"
        android:layout_below="@+id/textview_mouth_middle"
        android:layout_alignTop="@+id/ratingbar_mouth"
        />
    <View
        android:layout_marginTop="2dp"
        android:background="#3f686e6e"
        android:layout_below="@+id/textview_mouth_bottuo"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</RelativeLayout>