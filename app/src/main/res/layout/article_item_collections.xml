<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <View
        android:background="#a49f9f"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        >

    </View>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/image_collection_itme"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@id/textview_collection_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/image_collection_itme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/image_collection_itme"
        android:layout_toRightOf="@+id/image_collection_itme">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/pig"/>
        <TextView
            android:id="@id/textview_lick_count_article"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/pig"/>
        <TextView
            android:id="@id/textview_lick_look_count"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#a49f9f"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        >
    </View>

</LinearLayout>